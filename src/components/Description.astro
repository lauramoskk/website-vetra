---
import { cn } from "../utils/cn";

interface Props {
	text: string;
	className?: string;
	variant?: "primary" | "secondary";
}

const { text, className = "", variant = "primary" }: Props = Astro.props;

// Classes organizadas por categoria
const descriptionClasses = cn(
	// Typography
	"text-text-grey font-serif",
	// Custom
	className,
	variant === "primary" && "text-[16px] leading-[20px]",
	variant === "secondary" && "text-[14px] leading-[18px]",
);
---

<p class={descriptionClasses}>{text}</p>
