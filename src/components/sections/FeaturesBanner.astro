---
import PurpleShine from "../elements/PurpleShine.astro";

const navigationItems = [
  "Intelligent Interfaces",
  "Adaptive UX",
  "AI-Driven Design",
  "Human-Centric",
  "Smart Automations",
  "Intuitive Journeys",
  "Visual Simplicity",
  "Seamless Interactions",
];

// Duplicate items to ensure smooth scrolling loop without JS calculation
// 3 sets is usually enough for most screens if the content width > viewport width
const duplicateCount = 3;
const duplicatedItems = Array(duplicateCount).fill(navigationItems).flat();
---

<div class="container">
  <section class="banner">
    <div class="slide-track">
      {
        duplicatedItems.map((item, index) => (
          <div class="slide">
            <span>{item}</span>
            <PurpleShine class="shine-icon" />
          </div>
        ))
      }
    </div>
  </section>
</div>

<style>
  .container {
    width: 100vw;
    overflow-x: hidden; /* Changed from visible to hidden to prevent scrollbar */
    margin: 0;
    padding: 0;
  }

  .banner {
    background: #19204b;
    overflow: hidden; /* Changed to hidden to clip content */
    position: relative;
    width: 100%;
    padding: 1.5rem 0;
    box-sizing: border-box;
  }

  .slide-track {
    display: flex;
    width: fit-content;
    /* Move -33.33% because we have 3 sets. Moving 1 set (1/3) creates the loop */
    animation: scroll 40s linear infinite;
  }

  .slide {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-right: 1.5rem; /* Matches the gap between items visually */
    white-space: nowrap;
    color: #b2b3c7;
    font-weight: 500;
  }

  .shine-icon {
    color: #705cf6; /* A purple color matching the theme */
    width: 24px;
    height: 24px;
  }

  .banner::before,
  .banner::after {
    content: "";
    height: 100%;
    position: absolute;
    width: 100px;
    z-index: 2;
    top: 0;
    pointer-events: none;
  }

  .banner::before {
    left: 0;
    background: linear-gradient(to right, #19204b 0%, rgba(25, 32, 75, 0) 100%);
  }

  .banner::after {
    right: 0;
    background: linear-gradient(to left, #19204b 0%, rgba(25, 32, 75, 0) 100%);
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-33.333%);
    }
  }
</style>
