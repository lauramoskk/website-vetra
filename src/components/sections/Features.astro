---
import SectionLayout from "../../layouts/SectionLayout.astro";
import AlignmentLayout from "../../layouts/AlignmentLayout.astro";
import Title from "../Title.astro";
import Description from "../Description.astro";
import Badge from "../Badge.astro";

import { cn } from "../../utils/cn";

// Classes organizadas por categoria para melhor legibilidade
const sectionOuterClasses = cn(
	// Layout
	"flex items-center w-full relative",
);

const sectionInnerClasses = cn(
	// Layout & Sizing
	"w-full h-[782px]",
	// Spacing
	"py-[120px]",
	// Responsividade
	"max-sm:h-auto max-sm:py-[80px]",
);

const mainLayoutClasses = cn(
	// Spacing
	"gap-[60px]",
	// Responsividade
	"max-sm:gap-[40px] max-sm:flex-col max-sm:flex-col-reverse max-sm:gap-[64px]",
);

const featureImageDesktopClasses = cn(
	// Sizing
	"w-[519px] h-[606px]",
	// Responsividade
	"max-sm:hidden",
);

const featureImageMobileClasses = cn(
	// Layout & Sizing
	"w-full h-full",
	// Responsividade
	"hidden max-sm:block",
);

const contentContainerClasses = cn(
	// Spacing & Sizing
	"gap-4 w-[491px]",
	// Responsividade
	"max-sm:w-full",
);

const techDetailsImageClasses = cn(
	// Position
	"absolute top-[-184px] left-0 w-[1111px] h-[1602px]",
	// Responsividade
	"max-sm:hidden",
);
---

<SectionLayout
	autoMargin
	outerClassName={sectionOuterClasses}
	innerClassName={sectionInnerClasses}
	id="como-funciona"
>
	<div class={techDetailsImageClasses + " opacity-20"}>
		<!-- Graphic Placeholder -->
	</div>

	<AlignmentLayout
		direction="horizontal"
		justify="between"
		align="center"
		className={mainLayoutClasses}
	>
		<div
			class={featureImageDesktopClasses +
				" bg-white/5 rounded-2xl flex items-center justify-center border border-white/10"}
		>
			<span class="text-white/50">Imagem de Destaque (Desktop)</span>
		</div>

		<div
			class={featureImageMobileClasses +
				" bg-white/5 rounded-2xl flex items-center justify-center border border-white/10"}
		>
			<span class="text-white/50">Imagem de Destaque (Mobile)</span>
		</div>

		<AlignmentLayout
			direction="vertical"
			justify="center"
			align="start"
			className={contentContainerClasses}
		>
			<Badge text="Benefício Principal" />
			<Title text="Título da Seção de Funcionalidades" />
			<Description
				text="Descrição detalhada dos benefícios e funcionalidades do produto ou serviço. Foque em resolver as dores do cliente."
				className="max-w-[600px]"
			/>
		</AlignmentLayout>
	</AlignmentLayout>
</SectionLayout>
