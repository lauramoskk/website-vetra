---
import { cn } from "../utils/cn";

interface Props {
	text: string;
	className?: string;
	variant?: "primary" | "secondary";
}

const { text, className = "", variant = "primary" }: Props = Astro.props;

// Classes organizadas por categoria
const titleClasses = cn(
	// Typography
	"font-sans font-medium text-text-secondary",
	// Responsividade
	"max-sm:text-[32px] max-sm:leading-[40px]",
	// Custom
	variant === "primary"
		? "text-[56px] leading-[64px]"
		: "text-[20px] leading-[24px]",
	className,
);
---

<p class={titleClasses}>{text}</p>
