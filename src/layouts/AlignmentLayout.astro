---
import { cn } from '../utils/cn';

interface Props {
    direction?: 'horizontal' | 'vertical';
    justify?: 'start' | 'center' | 'end' | 'between' | 'around' | 'evenly';
    align?: 'start' | 'center' | 'end' | 'stretch' | 'baseline';
    className?: string;
    id?: string;
    style?: string;
}

const { 
    direction = 'vertical',
    justify = 'center',
    align = 'center',
    className = '',
    id,
    style = ''
}: Props = Astro.props;

// Mapear direction para classes do Tailwind
const directionClass = direction === 'horizontal' ? 'flex-row' : 'flex-col';

// Mapear justify para classes do Tailwind
const justifyClassMap = {
	'start': 'justify-start',
	'center': 'justify-center',
	'end': 'justify-end',
	'between': 'justify-between',
	'around': 'justify-around',
	'evenly': 'justify-evenly'
};
const justifyClass = justifyClassMap[justify];

// Mapear align para classes do Tailwind
const alignClassMap = {
	'start': 'items-start',
	'center': 'items-center',
	'end': 'items-end',
	'stretch': 'items-stretch',
	'baseline': 'items-baseline'
};
const alignClass = alignClassMap[align];

// Construir classes finais organizadas
const classes = cn(
	// Layout base
	'flex',
	directionClass,
	justifyClass,
	alignClass,
	// Custom
	className,
	style
);
---

<div class={classes} id={id} style={style}>
	<slot />
</div>
